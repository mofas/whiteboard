

<!doctype html>
    <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>吉他好朋友</title>    


    <!-- CSS lib -->    
    <link rel="stylesheet"  href="/css/lib/bootstrap.min.css" />     

    <!-- JS lib -->       
    <script type="text/javascript" src="/js/lib/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="/js/lib/jquery-ui-1.9.1.drag.min.js"></script>    

    <!-- CSS -->
    <link rel="stylesheet"  href="/css/edit.css" />
    <link rel="stylesheet"  href="/css/songFormat.css" />

    <!-- JS -->          
    <script type="text/javascript" src="/js/songFormat.js"></script>
    <script type="text/javascript" src="/js/edit.js"></script>



    </head>

    <body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="/list">吉他好朋友</a>                
                <a class="btn btn-primary" href="..\list">回清單</a>                            
            </div>
        </div>
    </div>

    <div id="edit">
        <div class="container well well-large">            
            <% if(data._id == undefined ){ %>
                <a id="submitButton" class="btn btn-success" href="javascript:editOperation.submit();">新增</a>
            <%} else {%>    
                <a id="submitButton" class="btn btn-success" data-id="<%= data._id %>" href="javascript:void(0);">儲存</a> 
                <a id="deleteButton" class="btn btn-danger" data-id="<%= data._id %>" href="javascript:void(0);">刪除</a> 
            <% } %>        
            <div>
                <form id="editForm">
                    <div class="input-prepend">
                        <span class="add-on">作者</span>                        
                        <input type="text" class="span4" id="author" name="author" placeholder="Band/Artist" value="<%= data.author || '' %>"/>
                    </div>                
                
                    <div class="input-prepend">
                        <span class="add-on">歌名</span>                                        
                        <input type="text" class="span4" id="title" name="title" placeholder="Song Name" value="<%= data.title || '' %>"/> 
                    </div>
                    <div class="tabbable">
                      <ul class="nav nav-tabs">
                        <li class="active"><a href="#editorView" data-toggle="tab">編輯</a></li>
                        <li class=""><a href="#previewView" data-toggle="tab">預覽</a></li>
                      </ul>
                      <div class="tab-content">
                        <div class="tab-pane active" id="editorView">                            
                            <h4>歌詞</h4>   
                            <span class="btnGroup">
                                <a class="sourceButton btn btn-info" href="javascript:editOperation.arrange();">譜和弦</a>
                                ||
                                <a class="sourceButton btn btn-primary" href="javascript:editOperation.openSourceCodeDialog();">編輯原始碼</a>
                            </span>                            
                            <div class="chordWrap">
                                <div class="chordCanvas">
                                    <div class="chordTool">
                                        <div class="btnGroup">
                                            <a class="btn btn-info" href="">更新</a>
                                            <a class="btn btn-danger" href="javascript:editOperation.abortArrange();">放棄</a>
                                            <span class="clearfix"></span>
                                        </div>
                                        <div class="chordGenegator">
                                            <div>新和絃</div>
                                            <input type="text" class="newChord_name input-mini" placeholder="和絃名">
                                            <input type="text" class="newChord_duration input-mini" placeholder="小節數">
                                            <a class="btn btn-success btn-block" href="javascript:editOperation.genegrateChord()">生成</a>
                                        </div>                                    
                                        <div class="chordTrash">
                                            <div>刪除和絃</div>
                                            <img src="/img/trashBin.png">
                                        </div>
                                        <div class="chordList">
                                            <div>常用和絃</div>
                                            <div class="chordListContainer">
                                                <div class="chordItem">Amx1</div>
                                                <div class="chordItem">Cmx1</div>
                                                <div class="chordItem">Emx1</div>
                                                <div class="chordItem">Bx1</div>
                                                <div class="chordItem">Dx1</div>
                                                <div class="chordItem">Gx1</div>
                                                <div class="chordItem">Fx1</div>
                                            </div>
                                        </div>                                    
                                    </div>
                                    <div class="chordCollection"></div>
                                </div>
                            </div>
                            <textarea id="lyric" row="2"></textarea>
                        </div>
                        <div class="tab-pane" id="previewView">
                            <h4>預覽</h4>
                            <div class="alert alert-block">
                                <div id="preview"></div>
                            </div>
                        </div>
                      </div>
                    </div>
                    <div id="sourceCodeDialog">
                        <div class="sourceCodeDialogOverlay">
                            <div class="content">
                                <h4>原始碼</h4>
                                <span class="btnGroup">
                                    <a id="saveSourceCodeButton" class="btn btn-info" href="javascript:editOperation.updateSourceCode();">保存</a>
                                    <a id="abortSourceCodeButton" class="btn btn-danger" href="javascript:editOperation.abortSourceCodeDialog();">放棄</a>
                                </span>
                                <textarea id="sourceCode" row="2" name="lyric"><%= data.lyric || '' %></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    </body>
</html>

  


